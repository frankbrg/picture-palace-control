{% if item.poster_path is not null %}
<a href="{{ path(data.controllerPath, {id: item.id}) }}">
    <div class=" flex flex-col bg-cover justify-items-center bg-indigo-700 rounded-xl mb-auto" style="background-image:url('https://image.tmdb.org/t/p/w500/{{item.poster_path}}')">
        <div class="w-36 text-center overflow-hidden rounded-xl" style="height:13.5rem">
            <div class="rounded-2xl flex p-1 w-14 h-8 justify-items-center justify-center m-1 flex-row-reverse bg-purple-700 bg-opacity-75 text-white ml-auto">
                <div class="text-gray-300 flex items-center flex-nowrap justify-between w-full pr-1">
                    <svg class="text-yellow-300 w-6 h-6 text-center mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    {{item.vote_average|number_format(1, ',')}}
                </div>
            </div>
        </div>
    </div>
</a>
{% endif %}
