<div class="transition duration-150 ease-in-out  flex w-full shadow-md items-center justify-between bg-white dark:bg-gray-800 rounded-lg p-4 h-52 dark:hover:bg-gray-900 hover:bg-indigo-100 hover:shadow-xl">
    {% if movie.poster_path is not empty %}

    <div class=" w-40 min-w-20">
        <img class="w-full rounded-md" src="https://image.tmdb.org/t/p/w500/{{movie.poster_path}}">
    </div>
    {% endif %}

    <div class="flex justify-between flex-col h-full p-3 w-full">
        <div class=" h-2/5">
            <h2 class="text-lg text-gray-700 dark:text-white">{{movie.title}}</h2>
        </div>
        <div class="text-purple-500 flex items-center">
            <svg class="w-6 h-6 text-yellow-300 text-center mr-1"xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            {{movie.vote_average}}
        </div>
        <div class="text-gray-500 flex items-center">
            <svg class=" text-blue-500 w-6 h-6 text-center mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            {% if movie.release_date is defined %}

                {{movie.release_date|date("j M. Y") }}

            {% endif %}
        </div>
        <div class="flex flex-row-reverse">
            <a class=" shadow-md hover:from-purple-500 hover:via-purple-500 hover:to-purple-500 bg-red-400 w-10 h-10 text-white rounded-full p-2 "href="{{ path('download', {id: movie.id,}) }}">
                <svg class="" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
            </a>
        </div>
    </div>
</div>
