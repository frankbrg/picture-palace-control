
<div class="flex md:w-96 w-full shadow-lg items-center justify-between bg-white dark:bg-gray-800 rounded-lg p-4 h-40  m-2">
    <div class="w-20 min-w-20">
        <img class="w-full rounded rounded-md" src="https://image.tmdb.org/t/p/w500/{{movie.poster_path}}">
    </div>
    <div class="flex flex-col h-full text-center p-3 w-full">
        <div>
            <h2 class="text-lg text-gray-700 dark:text-white">{{movie.title}}</h2>
        </div>
        <div class="text-purple-500">{{movie.vote_average}}</div>
        <div class="text-gray-500"></div>
        {{movie.id}}
        <a href="{{ path('download', {
            id: movie.id,
        }) }}">Download</a>
    </div>
</div>

